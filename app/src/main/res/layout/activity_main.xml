<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v4.widget.DrawerLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingStart="40dp"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_cloud"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#2699FB"
                            android:text="8℃"
                            android:textSize="28sp"
                            android:layout_marginStart="16dp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="24℃/9℃ 체감온도 8℃"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="미세먼지: 보통(36) / 초미세먼지: 보통(17)"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/calendar_action"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingStart="40dp"
                    android:background="#F1F9FF"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_chart"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#2699FB"
                        android:text="진료 일정"
                        android:textSize="28dp"
                        android:layout_marginStart="32dp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/iv_action"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingStart="40dp"
                    android:background="#DAEFFF"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_iv"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#2699FB"
                        android:text="수액 정보"
                        android:textSize="28dp"
                        android:layout_marginStart="32dp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/step_action"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingStart="40dp"
                    android:background="#C7E6FF"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_step"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#2699FB"
                        android:text="도보 기록"
                        android:textSize="28dp"
                        android:layout_marginStart="32dp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="#3F51B5"/>

        </android.support.v4.widget.DrawerLayout>
    </LinearLayout>

    <!-- 열기/닫기 버튼 레이아웃 -->
    <RelativeLayout
        android:id="@+id/toggle_icon_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:onClick="onButton1Clicked">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:src="@drawable/icon_menu"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/slidingPage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:visibility="gone">

        <!-- 열기/닫기 버튼 레이아웃 -->
        <RelativeLayout
            android:id="@+id/toggle_icon_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:onClick="onButton1Clicked">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:src="@drawable/icon_menu"/>

        </RelativeLayout>

        <!-- 슬라이드 레이아웃 -->
        <RelativeLayout
            android:id="@+id/slidingPage01"
            android:layout_width="248dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#51ADFB"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_user"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="48dp"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홍길동(28) 님"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_below="@id/user_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/user_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/user_stat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상태 : "
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이메일 : "
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연락처 : "
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/user_linker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="링거대 : "
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입원 시작 날짜 : 2019년 4월 28일"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/logout_btn"
                android:layout_width="152dp"
                android:layout_height="32dp"
                android:text="로그 아웃"
                android:textColor="#008AFF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_logout_round4"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="56dp"/>
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>